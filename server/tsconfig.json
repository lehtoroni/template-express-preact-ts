{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es2022",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*"
    ]
}